import React, {Component} from 'react';
import * as actions from "../actions";
import {connect} from "react-redux";
import {compose} from "redux";
import {reduxForm} from "redux-form";


class CustomTablePatientList extends Component {

    constructor(props) {
        super(props);
        this.state = {
            // patients: JSON.parse(localStorage.getItem('PATIENTLIST'))
            events:[
                {surname: '', event: '',eventDate: '' }
            ]
        };

    }


    async componentWillMount() {
        this.setState({events: JSON.parse(localStorage.getItem('PATIENTEVENTS'))})
        localStorage.removeItem('PATIENTEVENTS')
    };


    renderTableHeader(req,res,next) {


        let header = Object.keys(this.state.events[0]);

        return header.map((key, index) => {
            return <th className="alert alert-primary"   key={index}>{key.toUpperCase()}</th>
        })
    }


    renderTableData() {
        return this.state.events.map((events, index) => {
            const {surname, event, eventDate} = events; //destructuring
            return (
                <tr key={surname}>
                    <td>{surname}</td>
                    <td>{event}</td>
                    <td>{eventDate}</td>
                </tr>
            )
        })
    }


    render() {
        return (
            <div >
                <h3 id='title'>Latest Events</h3>
                <table className="table" id='events'>
                    <tbody>
                    <tr>{this.renderTableHeader()}</tr>
                    {this.renderTableData()}
                    </tbody>
                </table>
            </div>
        )
    }
}


function mapStateToProps(state) {
    return {
        events: state.patientForm.events
    }
}

export default compose(
    connect(mapStateToProps, actions)
)(CustomTablePatientEvents)